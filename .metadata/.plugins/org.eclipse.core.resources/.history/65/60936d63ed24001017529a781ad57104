/* Private define ------------------------------------------------------------*/
/* USER CODE BEGIN PD */
#define LIS3DH_ADDR         (0x19 << 1)  // LIS3DH I2C address shifted for HAL (8-bit address)
#define LIS3DH_WHO_AM_I 0x0F

char uart_buf[64];

/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/
I2C_HandleTypeDef hi2c1;

UART_HandleTypeDef huart2;

/* USER CODE BEGIN PV */

/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_I2C1_Init(void);
static void MX_USART2_UART_Init(void);
/* USER CODE BEGIN PFP */
uint8_t LIS3DH_Read_WHOAMI(void);
void LIS3DH_Print_WhoAmI(void);
/* USER CODE END PFP */

/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */
// Function to read WHO_AM_I register
uint8_t LIS3DH_Read_WHOAMI(void)
{
    uint8_t whoami = 0x00;
    if (HAL_I2C_Mem_Read(&hi2c1, LIS3DH_ADDR, LIS3DH_WHO_AM_I, I2C_MEMADD_SIZE_8BIT, &whoami, 1, HAL_MAX_DELAY) != HAL_OK)
    {
        snprintf(uart_buf, sizeof(uart_buf), "Failed to read WHO_AM_I\r\n");
        HAL_UART_Transmit(&huart2, (uint8_t*)uart_buf, strlen(uart_buf), HAL_MAX_DELAY);
    }
    return whoami;
}

// Function to print the WHO_AM_I result
void LIS3DH_Print_WhoAmI(void)
{
    uint8_t whoami = LIS3DH_Read_WHOAMI();

    if (whoami == 0x33)
    {
        snprintf(uart_buf, sizeof(uart_buf), "LIS3DH WHO_AM_I OK: 0x%02X\r\n", whoami);
    }
    else
    {
        snprintf(uart_buf, sizeof(uart_buf), "LIS3DH WHO_AM_I ERROR: 0x%02X\r\n", whoami);
    }
    HAL_UART_Transmit(&huart2, (uint8_t*)uart_buf, strlen(uart_buf), HAL_MAX_DELAY);
}

/* USER CODE END 0 */

