/* USER CODE BEGIN 4 */
/**
  * @brief Select ADC channel IN6 (PA6)
  */
void ADC_Select_IN6(void)
{
  ADC_ChannelConfTypeDef sConfig = {0};
  sConfig.Channel = ADC_CHANNEL_6;
  sConfig.Rank = ADC_RANK_CHANNEL_NUMBER;
  sConfig.SamplingTime = ADC_SAMPLETIME_160CYCLES;
  HAL_ADC_ConfigChannel(&hadc, &sConfig);
}
/**
  * @brief Start ADC conversion and read value into pointer
  */
void ADC_Read_Channel(uint16_t *result)
{
  HAL_ADC_Start(&hadc);
  HAL_ADC_PollForConversion(&hadc, HAL_MAX_DELAY);
  *result = HAL_ADC_GetValue(&hadc);
  HAL_ADC_Stop(&hadc);
}
/**
  * @brief Print ADC result as voltage to UART
  */
void ADC_Print_Voltage(uint16_t raw)
{
  float voltage = ((float)raw / ADC_RESOLUTION) * VREF;
  int len = snprintf(msg, sizeof(msg), "ADC_IN6: %.3f V\r\n", voltage);
  HAL_UART_Transmit(&huart2, (uint8_t*)msg, len, HAL_MAX_DELAY);
}
/* USER CODE END 4 */

